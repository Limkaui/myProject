<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.review.dao.ReviewMapper">
	<!-- 총 레코드 수 -->
	<select id="selectRowCount" resultType="integer">
		SELECT
		   COUNT(*)
		FROM review r
		JOIN member m
		ON r.mem_num = m.mem_num
	</select>
	
	<!-- 글 목록 -->
	<select id="selectList" parameterType="map" resultType="reviewVO">
		SELECT
		   *
		FROM (SELECT 
		        a.*,
		        rownum rnum
		      FROM(SELECT
		              r.rev_num,
		              <![CDATA[
		              REPLACE(REPLACE(r.rev_title,'<','&lt;'),'>','&gt;') rev_title,
		              ]]>
		              r.rev_hits,
		              r.rev_date,
		              m.mem_num,
		           FROM review r
		           JOIN member m
		           ON r.mem_num = m.mem_num
		           ORDER BY r.rev_num DESC)a)
    	<![CDATA[
    	WHERE rnum >= #{start} AND rnum <= #{end}
    	]]>
	</select>
	<!-- 글 수정
	<update id="updateReview" parameterType="reviewVO">
		UPDATE review SET
			<if test="filename != ''">
			uploadfile=#{uploadfile},
			filename=#{filename},
			</if>	
			title=#{title},
			content=#{content},
			ip=#{ip},
			modify_date=SYSDATE
		WHERE board_num=#{board_num}
	</update> -->
</mapper>







